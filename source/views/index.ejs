<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ECOLUTION</title>
    <script src="https://d3js.org/d3.v6.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/billboard.js/3.1.5/billboard.min.js"></script>
    <link rel="stylesheet" href='/style/insight.min.css'>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-image: url('/resources/PSD/forest.jpg');
            background-size: cover;
            background-position: center center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
        .navbar {
            position: absolute;
            right: 0;
            top: 0;
            margin: 20px;
            background-color: rgba(255, 255, 255, 0.5); /* Semi-transparent background */
            border-radius: 5px;
            padding: 10px;
        }
        .navbar ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
        }
        .navbar ul li {
            padding: 10px;
            margin-left: 10px;
        }
        .navbar ul li a {
            text-decoration: none;
            color: #000;
            font-weight: bold;
        }
        #chart {
            position: absolute;
            right: 0vh;
            bottom: -20vh;
            transform: translateX(50%);
            max-width: 600px;
            width: 100%;
            margin-left: 450px;
            background-color: rgba(240, 240, 240, 0.5); /* Semi-transparent grey background */
            padding: 20px; /* Add some padding around the chart */
            border-radius: 8px; /* Optional: adds rounded corners to the background */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Optional: adds a subtle shadow for depth */
            /* Ensure text and other elements are visible above the background */
            z-index: 10;
        }
        .header-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px;
        }
        .header-title {
            display: flex;
            align-items: center;
        }
        .header-logo img {
            height: 50px;
            margin-left: 15px;
        }
        h1 {
            margin: 0;
        }
        
        .grey-rectangle {
            position: fixed;
            left: 0;
            bottom: -20vh5;
            margin-left: 200px;
            height: 50%;
            width: 50px; /* Adjust width as needed */
            background-color: rgba(180, 180, 180, 0.8); /* Grey background with 80% opacity */
            z-index: 100; /* Ensure it's above other content */
            
        }

    </style>
</head>
<body>

    <div class="grey-rectangle"></div>


    <div class="header-container">
        <div class="header-title">
            <h1>ECOLUTION</h1>
            <div class="header-logo">
                <img src="/resources/PSD/BrandLogo.jpg" alt="Ecolution Logo">
            </div>
        </div>
        <!-- Navigation Bar -->
        <div class="navbar">
            <ul>
                <li><a href="#home">Login</a></li>
                <li><a href="#about">Home</a></li>
                <li><a href="#about">Goals</a></li>
                <li><a href="#services">Appliance</a></li>
                <li><a href="#contact">Travel</a></li>
                <li><a href="#about">Leaderboard</a></li>
            </ul>
        </div>
    </div>
    <div id="chart"></div>
    <script>
        // Fetch the chart data from the server
        fetch('/chart-data')
            .then(response => response.json())
            .then(data => {
                // Generate the chart using billboard.js
                var chart = bb.generate({
                    bindto: "#chart",
                    transition: {
                        duration: 1000
                    },
                    bar: {
                        width: {
                            ratio: 0.5
                        }
                    },
                    data: {
                        type: "bar",
                        columns: [
                            ["data1", ...data.data1.map(() => 0)],
                            ["data2", ...data.data2.map(() => 0)]
                        ]
                    }
                });
                setTimeout(function() {
                    chart.load({
                        columns: [
                            ["data1", ...data.data1],
                            ["data2", ...data.data2]
                        ]
                    });
                }, 2000);
            });
    </script>
</body>
</html>
