<script>
    // Fetch the chart data from the server
    fetch('/chart-data')
        .then(response => response.json())
        .then(data => {
            // Generate the chart using billboard.js
            var chart = bb.generate({
                bindto: "#chart",
                transition: {
                    duration: 1000
                },
                bar: {
                    width: {
                        ratio: 0.5 // This controls the width of the bars in the chart.
                    }
                },
                data: {
                    type: "bar", // Specifies the chart type.
                    columns: [
                        ["current week", ...data.data1.map(() => 0)], // Initializes data1 with zeros.
                        ["previous week", ...data.data2.map(() => 0)] // Initializes data2 with zeros.
                    ]
                },
                axis: {
                    x: {
                        type: 'category',
                        categories: ['Travel', 'Recycling', 'Apliances'], // Example categories for X axis,
                        label:
                        {
                            text: 'Causes of Emissions', // X-axis label text
                            position: 'outer-center'
                        }
                    },
                    y: {
                        label: 
                        {
                            text: 'Emissions', // Y-axis label text
                            position: 'outer-middle'
                        }
                    }
                }
            });

            // Update the chart data after a delay to create an animation effect.
            setTimeout(function() {
                chart.load({
                    columns: [
                        ["current week", ...data.data1], // Loads the actual data1 values.
                        ["previous week", ...data.data2] // Loads the actual data2 values.
                    ]
                });
            }, 2000); // Delay before updating the chart data.
        });
</script>


